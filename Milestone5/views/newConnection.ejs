<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Homepage | HACK n CONF</title>
	<link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/assets/css/style.css">
	<script src="/assets/js/jquery-3.4.1.min.js"></script>
	<script src="/assets/js/bootstrap.min.js"></script>
	<script src="/assets/js/feature.js"></script>
	<!--[if lt IE 9]
	<script src="./js/browser-ie.js"></script>
	<![endif]-->
</head>

<body onload="myFunction()">
	<header>
		<%- include('header.ejs') %>
	</header>
	<%- include('navigation.ejs') %>
	<main class="col-md-12">
		<section>
			<br/>
			<div class="col-md-1"></div>
			<article class="col-md-7 well">
				<header>
					<h4>Start a new connection</h4>
				</header>
				<br/>
				<div>

					<%if(formDetails) {%>
						<%} else {%>
						<%}%>

					<form class="form-horizontal" action="/addNewConnection" method="POST">
						<div class="form-group">
							<label class="control-label col-sm-3" for="connectionID">Connection ID: </label>
							<div class="col-sm-6">
								<input type="text" class="form-control" id="connectionID" name="connectionID" readonly>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-sm-3" for="connectionName">Connection Name: </label>
							<div class="col-sm-6">
								<%if(formDetails) {%>
									<input type="text" class="form-control" placeholder="Enter Connection Name here..." id="connectionName" name="connectionName" value="<%- formDetails.connectionName %>" required>
								<%} else {%>
									<input type="text" class="form-control" placeholder="Enter Connection Name here..." id="connectionName" name="connectionName" required>
								<%}%>
								<label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'connectionName') {%><%-error.msg%><%}%><%})%><%}%></label>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-sm-3">Connection Topic: </label>
							<div class="col-sm-6">
								<%if(formDetails) {%>
									<input type="text" class="form-control" placeholder="Enter Connection Topic here..." id="connectionTopic" name="connectionTopic" value="<%- formDetails.connectionTopic %>" required>
								<%} else {%>
									<input type="text" class="form-control" placeholder="Enter Connection Topic here..." id="connectionTopic" name="connectionTopic" required>
								<%}%>
								
								<label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'connectionTopic') {%><%-error.msg%><%}%><%})%><%}%></label>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-sm-3" for="details">Connection Details: </label>
							<div class="col-sm-6">
								<textarea class="form-control" id="details" placeholder="Enter Details Here..." name="details" rows="3" cols="30" required></textarea>
								<label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'details') {%><%-error.msg%><%}%><%})%><%}%></label>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-sm-3" for="startDate">Start Date and Time: </label>
							<div class="col-sm-6">
								<%if(formDetails) {%>
									<input type="date" class="form-control" id="startDate" name="startDate" value="<%-formDetails.startDate%>" required><label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'startDate') {%><%-error.msg%><%}%><%})%><%}%></label>
								<%} else {%>
									<input type="date" class="form-control" id="startDate" name="startDate" required>
								<%}%>

								<%if(formDetails) {%>
									<input type="time" class="form-control" id="startTime" name="startTime" value="<%-formDetails.startTime%>" required><label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'startTime') {%><%-error.msg%><%}%><%})%><%}%></label>
								<%} else {%>
									<input type="time" class="form-control" id="startTime" name="startTime" required>
								<%}%>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-sm-3" for="endDate">End Date and Time: </label>
							<div class="col-sm-6">
								<%if(formDetails) {%>
									<input type="date" class="form-control" id="endDate" name="endDate" value="<%-formDetails.endDate%>" required><label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'endDate') {%><%-error.msg%><%}%><%})%><%}%></label>
								<%} else {%>
									<input type="date" class="form-control" id="endDate" name="endDate" required>
								<%}%>

								<%if(formDetails) {%>
									<input type="time" class="form-control" id="endTime" name="endTime" value="<%-formDetails.endTime%>" required><label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'endTime') {%><%-error.msg%><%}%><%})%><%}%></label>
								<%} else {%>
									<input type="time" class="form-control" id="endTime" name="endTime" required>
								<%}%>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-sm-3" for="location">Location: </label>
							<div class="col-sm-6">
								<%if(formDetails) {%>
									<input type="text" class="form-control" id="location" placeholder="Enter Location Here..." name="location" value="<%-formDetails.location%>" required>
								<%} else {%>
									<input type="text" class="form-control" id="location" placeholder="Enter Location Here..." name="location" required>
								<%}%>
								<label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'location') {%><%-error.msg%><%}%><%})%><%}%></label>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-sm-3" for="hostedby">Hosted By: </label>
							<div class="col-sm-6">
								<%if(formDetails) {%>
									<input type="text" class="form-control" id="hostedby" placeholder="Hosted By..." name="hostedby" value="<%- formDetails.hostedby %>" required>
								<%} else {%>
									<input type="text" class="form-control" id="hostedby" placeholder="Hosted By..." name="hostedby" required>
								<%}%>
								<label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'hostedby') {%><%-error.msg%><%}%><%})%><%}%></label>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-sm-3" for="photoUrl">Photo URL: </label>
							<div class="col-sm-6">
								<%if(formDetails) {%>
									<input type="text" class="form-control" id="photoUrl" placeholder="Photo URL here..." name="photoUrl" value="<%- formDetails.photoUrl %>" required>
								<%} else {%>
									<input type="text" class="form-control" id="photoUrl" placeholder="Photo URL here..." name="photoUrl" required>
								<%}%>
								<label class="error"><%if(errors) {%><%errors.forEach(function(error) {%><%if(error.param == 'photoUrl') {%><%-error.msg%><%}%><%})%><%}%></label>
							</div>
						</div>

						<div class="form-group">
							<div class="col-sm-offset-3 col-sm-10">
								<button type="submit" class="btn btn-primary">Create Connection</button>
							</div>
						</div>
					</form>
				</div>
				<br/>
			</article>
		</section>
	</main>
	<footer>
		<%- include('footer.ejs') %>
	</footer>
</body>
</html>
